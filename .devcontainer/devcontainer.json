{
    "name": "Swift Development",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "features": {},
    "customizations": {
        "vscode": {
            "extensions": [
                "sswg.swift-lang",
                "vadimcn.vscode-lldb",
                "eamodio.gitlens",
                "ms-azuretools.vscode-docker"
            ],
            "settings": {
                "lldb.library": "/usr/lib/liblldb.so",
                "swift.path.swift_driver_bin": "/usr/bin/swift",
                "editor.formatOnSave": true,
                "editor.rulers": [
                    100
                ]
            }
        }
    },
    "remoteUser": "vscode",
    "postCreateCommand": "swift --version"
}