{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Swift Package",
            "type": "shell",
            "command": "swift build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": ["$swiftc"]
        },
        {
            "label": "Test Swift Package",
            "type": "shell",
            "command": "swift test",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": ["$swiftc"]
        },
        {
            "label": "Run SwiftLint",
            "type": "shell",
            "command": "swiftlint",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Format Code",
            "type": "shell",
            "command": "swift-format --in-place --recursive .",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "swift package clean",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Run Benchmarks",
            "type": "shell",
            "command": "swift scripts/benchmark.swift",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Development Checks",
            "type": "shell",
            "command": "make dev",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}
